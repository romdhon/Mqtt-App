#:include kv/setting.kv

NavigationLayout:
    ScreenManager:
        Screen:
            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    id: tb
                    title: 'MQTT Disconnected'
                    left_action_items: [['menu', lambda x: drawer.set_state('open')]]
                    right_action_items: [[app.icon, lambda y: app.play()]]

                FloatLayout:
                    Display:
                        pos_hint: {'top':.95, 'right':.475}
                        MyLabel:
                            text: 'PH Sensor'
                            theme_text_color: 'Secondary'
                        StatusLabel:
                            id: stat1
                            text: 'Sensor OFF'
                            halign: 'center'
                            font_size: '30dp'


                    Display:
                        pos_hint: {'top':.95, 'right':.95}
                        MyLabel:
                            text: 'Temp Sensor'
                            theme_text_color: 'Secondary'
                        StatusLabel:
                            id: stat2
                            text: 'Sensor OFF'
                            halign: 'center'
                            font_size: '30dp'

                    Display:
                        pos_hint: {'top':.55, 'center_x':.5}
                        size_hint_x: .8
                        spacing: '8dp'
                        MyLabel:
                            text: 'History'
                            theme_text_color: 'Secondary'
                        MDSeparator:
                            height: 1
                        ScrollView:
                            ChatLabel:
                                text: ''
                                id: sensor


                    GridLayout:
                        rows: 1
                        pos_hint: {'top':.175, 'left':1}
                        size_hint: 1, .125
                        ImageButton:
                            source: self.button_off
                            on_release:
                                self.change_mode(self.num_bt1)
                        ImageButton:
                            source: self.button_off
                            on_release:
                                self.on_off_motor(self.num_bt2)
    MDNavigationDrawer:
        id: drawer
        ContentNavigationDrawer:
